@model WebUI.Models.ProductListViewModel

@{
    ViewData["Title"] = "Məhsullar";
    Layout = "~/Views/AdminLayout/Index.cshtml";

    int count = (Model.CurrentPage - 1) * Model.PageSize;
    var apiBaseUrl = "https://localhost:7228/";

    int maxPagesToShow = 7;
    int halfWindow = maxPagesToShow / 2;
    int startPage = Model.CurrentPage - halfWindow;
    int endPage = Model.CurrentPage + halfWindow;

    if (startPage < 1)
    {
        endPage += 1 - startPage;
        startPage = 1;
    }

    if (endPage > Model.TotalPages)
    {
        startPage -= endPage - Model.TotalPages;
        endPage = Model.TotalPages;
    }

    if (startPage < 1) startPage = 1;
}

<style>
    .page-item.active .page-link {
        background-color: #a2c4c9 !important;
        border-color: #7ba7ac !important;
        color: #333 !important;
    }
</style>

<div class="row">
    <div class="col-md-12">

        <!-- Filter form -->
        <form method="get" asp-controller="Product" asp-action="Index" class="form-inline mb-3">
            <label for="categoryId" class="mr-2">Kateqoriya:</label>
            <select id="categoryId" name="categoryId" class="form-control mr-2">
                <option value="">Hamısı</option>
                @if (Model.Categories != null && Model.Categories.Any())
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id" selected="@(category.Id == Model.SelectedCategoryId)">
                            @category.Name
                        </option>
                    }

                else
                {
                    <option disabled>Kateqoriya yoxdur</option>
                }
            </select>

            <button type="submit" class="btn btn-primary">Filtr et</button>
        </form>

        <!-- Form dəyişdikdə avtomatik göndərmək üçün (istəyə bağlı) -->
        <script>
            document.getElementById('categoryId')?.addEventListener('change', function () {
                this.form.submit();
            });
        </script>
        <div class="card">
            <div class="card-header"><div class="card-title">Məhsul Siyahısı</div></div>
            <div class="card-body">
                <div class="card-sub mb-3">
                    Məhsullarla bağlı əməliyyatları aşağıdan edə bilərsiniz.
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover text-nowrap">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Məhsul Adı</th>
                                <th>Kateqoriya</th>
                                <th>Brend</th>
                                <th>Gender</th>
                                <th>Rəng</th>
                                <th>Forması</th>
                                <th style="min-width: 200px;">Açıqlama</th>
                                <th>Qiymət</th>
                                <th>Stok</th>
                                <th>Endirimli Qiymət</th>
                                <th>Ən Çox Satılan</th>
                                <th>Məhsul şəkli</th>
                                <th>Yenilə</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Products)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.BrandName</td>
                                    <td>@item.GenderName</td>
                                    <td>
                                        <span title="@string.Join(", ", item.ColorNames)">
                                            @string.Join(", ", item.ColorNames.Take(2))@(item.ColorNames.Count > 2 ? ", ..." : "")
                                        </span>
                                    </td>
                                    <td>@item.ShapeName</td>
                                    <td style="max-width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" title="@item.Description">
                                        @item.Description
                                    </td>
                                    <td>@item.Price.ToString("0.00")</td>
                                    <td>@item.Stock</td>
                                    <td>@(item.DiscountPrice.HasValue ? item.DiscountPrice.Value.ToString("0.00") : "")</td>
                                    <td>
                                        @if (item.BestSeller)
                                        {
                                            <span class="text-success" title="Ən çox satılan">✓</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted" title="Ən çox satılmayan">−</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Images != null && item.Images.Count > 0)
                                        {
                                            foreach (var img in item.Images)
                                            {
                                                var url = apiBaseUrl + img.Replace("\\", "/");
                                                <img src="@url" style="max-height:50px; max-width:50px; object-fit:contain; margin-right:5px;" />
                                            }
                                        }
                                        else
                                        {
                                            <span>Şəkil yoxdur</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Product/UpdateProduct/@item.Id" class="btn btn-sm btn-outline-success">Yenilə</a>
                                    </td>
                                    <td>
                                        <a href="/Product/DeleteProduct/@item.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Əminsiniz?')">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <a href="/Product/CreateProduct/" class="btn btn-outline-primary mt-3">Yeni Məhsul Əlavə Et</a>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Səhifələmə">
                        <ul class="pagination justify-content-center mt-4">

                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="?page=@(Model.CurrentPage - 1)@(Model.SelectedCategoryId.HasValue ? "&categoryId=" + Model.SelectedCategoryId.Value : "")" aria-disabled="@(Model.CurrentPage == 1)">«</a>
                            </li>

                            @if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?page=1@(Model.SelectedCategoryId.HasValue ? "&categoryId=" + Model.SelectedCategoryId.Value : "")">1</a>
                                </li>
                                @if (startPage > 2)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                            }

                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                    <a class="page-link" href="?page=@i@(Model.SelectedCategoryId.HasValue ? "&categoryId=" + Model.SelectedCategoryId.Value : "")">@i</a>
                                </li>
                            }

                            @if (endPage < Model.TotalPages)
                            {
                                @if (endPage < Model.TotalPages - 1)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                                <li class="page-item">
                                    <a class="page-link" href="?page=@Model.TotalPages@(Model.SelectedCategoryId.HasValue ? "&categoryId=" + Model.SelectedCategoryId.Value : "")">@Model.TotalPages</a>
                                </li>
                            }

                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" href="?page=@(Model.CurrentPage + 1)@(Model.SelectedCategoryId.HasValue ? "&categoryId=" + Model.SelectedCategoryId.Value : "")">»</a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>
