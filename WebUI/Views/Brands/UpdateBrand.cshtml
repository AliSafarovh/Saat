@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Brend əməliyyatları</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Brend Yeniləmə Səhifəsi</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label for="brandname">Brend Adı</label>
                                <input type="text" class="form-control" asp-for="Name" id="brandname" required>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="categoryid">Kateqoriya Id</label>
                                    <input type="text" class="form-control" asp-for="CategoryId" id="categoryid" required>
                                </div>
                            </div>
                        </div><div class="card-action">
                            <button class="btn btn-success">Təsdiq Et</button>
                            <a href="/Brands/Index" class="btn btn-secondary">İmtina Et</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

