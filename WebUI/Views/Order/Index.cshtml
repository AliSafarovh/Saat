@model List<Domain.Entities.Order>

@{
    ViewData["Title"] = "Sifarişlər";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Sifarişlər</h5>
                <small class="text-muted">Burada bütün sifarişləri görə bilərsiniz</small>
            </div>
            <div class="card-body p-3">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover text-nowrap align-middle">
                        <thead class="thead-light">
                            <tr>
                                <th style="width:40px;">#</th>
                                <th>Ad Soyad</th>
                                <th>Telefon</th>
                                <th>Şəhər</th>
                                <th>Ümumi Qiymət</th>
                                <th>Endirimli Qiymət</th>
                                <th>Məhsullar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@order.FullName</td>
                                    <td>@order.PhoneNumber</td>
                                    <td>@order.City</td>
                                    <td>@string.Format("{0:N2} ₼", order.TotalPrice)</td>
                                    <td>@string.Format("{0:N2} ₼", order.TotalDiscountPrice)</td>
                                    <td style="max-width:350px; white-space: normal;">
                                        @if (order.OrderItems != null && order.OrderItems.Any())
                                        {
                                            <ul class="list-unstyled mb-0" title="Məhsulların tam siyahısı">
                                                @foreach (var item in order.OrderItems)
                                                {
                                                    <li title="@($"{item.Name} - Rəng: {item.Color} - Say: {item.Count} - Qiymət: {item.Price} ₼ - Endirimli: {item.DiscountPrice} ₼")">
                                                        <strong>@item.Name</strong> - Rəng: @item.Color - Say: @item.Count - Qiymət: @string.Format("{0:N2} ₼", item.Price) - Endirimli: @string.Format("{0:N2} ₼", item.DiscountPrice)
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-- Məhsul yoxdur --</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
