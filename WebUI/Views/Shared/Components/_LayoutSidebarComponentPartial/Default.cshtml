<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .sidebar {
        width: 250px;
        height: 100vh;
        overflow: hidden;
        background-color: #f8f9fa;
        border-right: 1px solid #ccc;
        position: fixed;
        display: flex;
        flex-direction: column;
    }

    .sidebar-wrapper {
        flex-grow: 1;
        overflow-y: auto;
        padding: 10px;
        padding-top: 0;
    }

    .sidebar .user {
        position: sticky;
        top: 0;
        background-color: #f8f9fa;
        z-index: 1;
        padding: 10px 10px 0 10px;
        border-bottom: 1px solid #ccc;
    }

        .sidebar .user .photo img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
        }

    .sidebar .nav-item i,
    .sidebar .nav-item p {
        color: #554 !important;
        margin-left: 5px;
    }

    .sidebar .nav-item a {
        display: flex;
        align-items: center;
        padding: 8px 10px;
        color: #333;
        text-decoration: none;
        border-radius: 4px;
        transition: background 0.2s;
    }

        .sidebar .nav-item a:hover {
            background-color: #e2e6ea;
        }
</style>


<div class="sidebar">
    <div class="sidebar-wrapper">
        <div class="user">
            <div class="photo">
                <img src="~/Ready-Bootstrap-Dashboard-master/assets/img/profile.jpg" />
            </div>
            <div class="info">
                <a class="" data-toggle="collapse" href="#collapseExample" aria-expanded="true">
                    <span>
                        Admin Panel
                        <span class="user-level">Ali Safaroff</span>
                        <span class="caret"></span>
                    </span>
                </a>
                <div class="clearfix"></div>

                <div class="collapse in" id="collapseExample" aria-expanded="true">
                    <ul class="nav flex-column">
                        <li>
                            <a asp-controller="Product" asp-action="Index">
                                <span class="link-collapse">Məhsullar</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Order" asp-action="Index">
                                <span class="link-collapse">Sifarişlər</span>
                            </a>
                        </li>
                        <li>
                            <a href="#settings">
                                <span class="link-collapse">Parametrlər</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <ul class="nav flex-column">
            <li class="nav-item">
                <a asp-controller="Category" asp-action="Index">
                    <i class="bi bi-tags"></i><p>Kateqoriyalar</p>
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Brands" asp-action="Index">
                    <i class="bi bi-bookmark-star"></i><p>Brendlər</p>
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Product" asp-action="Index">
                    <i class="bi bi-box-seam"></i><p>Məhsullar</p>
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Gender" asp-action="Index">
                    <i class="bi bi-person-exclamation"></i><p>Gender</p>
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="ProductImage" asp-action="Upload">
                    <i class="bi bi-images"></i><p>Şəkillər</p>
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Shape" asp-action="Index">
                    <i class="bi bi-circle-square"></i><p>Forma</p>
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Color" asp-action="Index">
                    <i class="bi bi-palette-fill"></i><p>Rənglər</p>
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Order" asp-action="Index">
                    <i class="bi bi-cart-fill"></i><p>Sifarişlər</p>
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Login" asp-action="LogOut">
                    <i class="bi bi-box-arrow-right"></i><p>Çıxış Et</p>
                </a>
            </li>
        </ul>
    </div>
</div>
